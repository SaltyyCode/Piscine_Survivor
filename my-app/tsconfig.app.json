{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "Node",
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "types": ["vite/client"],
    "verbatimModuleSyntax": true,
    "noEmit": true,

    "baseUrl": ".",               // <-- re-déclaré ici pour l'app
    "paths": { "@/*": ["src/*"] } // <-- alias aussi ici pour que TS l'applique au code frontend
  },
  "include": ["src"]
}
